CREATE TABLE mlbam_player (
    mlbamid integer UNIQUE, -- Straight from MLBAM
    firstname text,
    lastname text
);

CREATE TABLE park (
    id integer, -- use MLB's ids
    name text,
    location text,
    hp_x real,  -- these are scaled for 500x500px
    hp_y real,
    scale real
);

CREATE TABLE team (
    id integer, -- use MLB's
    code text,
    fullname text,
    name text
);

CREATE TABLE game (
    id integer PRIMARY KEY,
    home integer,
    away integer,
    park integer,
    day text
);

CREATE TABLE atbat (
    id integer PRIMARY KEY,
    game integer,
    pitcher integer,
    batter integer,
    batter_stand text,
    pitcher_throw text,
    des text,
    event text,
    FOREIGN KEY (game) REFERENCES game (id),
    FOREIGN KEY (pitcher) REFERENCES mlbam_player (mlbamid),
    FOREIGN KEY (batter) REFERENCES mlbam_player (mlbamid)
);

CREATE TABLE bip (
    id integer PRIMARY KEY,
    atbat integer,
    park integer,
    type text,
    x real,
    y real,
    FOREIGN KEY (atbat) REFERENCES atbat (id),
    FOREIGN KEY (park) REFERENCES park (id)
);

CREATE TABLE raw_pitch (
    id integer PRIMARY KEY,
    atbat integer,
    enhanced integer,
    inning integer,
    balls integer,  -- count data
    strikes integer,
    des text,
    px real,
    pz real,
    x real,
    y real,
    break_angle real,
    break_length real,
    break_y real,
    pfx_x real,
    pfx_z real,
    spin_dir real,
    spin_rate real,
    start_speed real,
    end_speed real,
    sz_bot real,
    sz_top real,
    sv_id text,
    pitch_type text,
    type text,
    type_confidence text,
    x0 real,
    y0 real,
    z0 real,
    vx0 real,
    vy0 real,
    vz0 real,
    ax real,
    ay real,
    az real,
    FOREIGN KEY (atbat) REFERENCES atbat (id)
);

CREATE TABLE norm_pitch (
    id integer PRIMARY KEY, -- this should be identical to the raw pitch
    atbat integer,
    inning integer,
    balls integer,  -- count data
    strikes integer,
    x0 real,
    y0 real,
    z0 real,
    vx0 real,
    vy0 real,
    vz0 real,
    ax real,
    ay real,
    az real,
    px real,
    pz real,
    pfx_x real,
    pfx_z real,
    spin_dir real,
    spin_rate real,
    start_speed real,
    end_speed real,
    sz_bot real,
    sz_top real,
    sv_id text,
    pitch_type text,
    FOREIGN KEY (atbat) REFERENCES atbat (id)
);

